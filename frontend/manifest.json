{
  "manifest_version": 3,
  "name": "Group Chat Extension",
  "description": "A browser extension for group chat.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://web-development-project-7-extension.onrender.com/*"
  ],
  "content_security_policy": {
    "script-src": [
      "'self'"
    ],
    "script-src-elem": [
      "https://web-development-project-7-extension.onrender.com/socket.io/socket.io.js#d43f19733c4ce96292872d5ddf5d774fd6d7984322957e3c6b98fe224f4535bf"
    ],
    "connect-src": [
      "'self'",
      "https://web-development-project-7-extension.onrender.com/*"
    ],
    "object-src": "'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}